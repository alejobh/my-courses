{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "project": ["tsconfig.json"],
      "sourceType": "module",
      "tsconfigRootDir": "./",
      "ecmaVersion": 12
  },
  "extends": [
    "airbnb-typescript",
    "airbnb/hooks",
    "plugin:@typescript-eslint/recommended",
    "plugin:jest/recommended",
    "plugin:testing-library/react"
  ],
  "plugins": [
    "react",
    "react-hooks",
    "import",
    "@typescript-eslint", 
    "jest", 
    "testing-library"
  ],
  "env": {
      "browser": true,
      "es2021": true,
      "jest": true
  },
  "rules": {
    "linebreak-style": "off",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  }
}